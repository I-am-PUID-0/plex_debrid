{
    "name": "Plex Debrid Dev Container",
    "image": "mcr.microsoft.com/devcontainers/python:3.11-bullseye",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.black-formatter"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "sh",
                "python.formatting.provider": "black",
                "editor.formatOnSave": true,
                "git.path": "/usr/bin/git"
            }
        }
    },
    "forwardPorts": [
        8002
    ],
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    "runArgs": [
        "--name=plex_debrid_dev",
        "--hostname=plex_debrid_dev",
        "--dns=8.8.8.8",
        "--dns=8.8.4.4"
    ],
    "postCreateCommand": "sudo apt update && sudo apt install -y curl && curl -sSL https://install.python-poetry.org | python - && export PATH=\"$HOME/.local/bin:$PATH\" && poetry config virtualenvs.create false && poetry install --no-root"
}